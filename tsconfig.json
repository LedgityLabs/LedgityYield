{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "types": ["node","jest", "@testing-library/jest-dom"],
    
    "moduleResolution": "node", // Use Node.js's module resolution algorithm
    "strict": true, // Enable all strict type-checking options
    "esModuleInterop": true, // Enables ESM-style imports
    "skipLibCheck": true, // Skip type checking of all declaration files (*.d.ts)
    "forceConsistentCasingInFileNames": true, // Disallow inconsistently-cased references to the same file.
    "lib": ["dom.iterable", "ESNext", "DOM"], // Specify a list of library files to be included in the compilation
    "allowJs": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["./public/*"],
      "graphclient": ["./.graphclient/"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "ts-node": {
    "esm": true,
    "experimentalResolver": true,
    "experimentalSpecifierResolution": "node",
    "files": true
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    ".next/types/**/*.ts",
    "~/src/env.mjs",
    "hardhat.config.cjs",
    "scripts/**/*.mts",
    ".graphclient/**/*.ts",
    "**/*.jsx",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "tests/mocks/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
