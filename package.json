    "chartjs-adapter-luxon": "^1.3.1",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "cookies-next": "^4.1.0",
    "d3-format": "^3.1.0",
    "dayjs": "^1.11.11",
    "embla-carousel-react": "^8.0.2",
    "graphql": "^16.8.1",
    "graphql-request": "^6.1.0",
    "lodash.merge": "^4.6.2",
    "lokijs": "^1.5.12",
    "lucide-react": "^0.366.0",
    "luxon": "^3.4.4",
    "mustache": "^4.2.0",
    "next": "^14.0.0",
    "next-auth": "^4.24.5",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18.2.0",
    "remixicon": "^4",
    "sharp": "^0",
