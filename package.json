{
  "name": "ledgity-defi",
  "version": "1.121.0",
  "scripts": {
    "dev": "next dev",
    "build": "pnpm cc:compile && next build",
    "start": "next start",
    "lint": "next lint",
    "cc:test": "forge test -v",
    "cc:node": "hardhat node --hostname 0.0.0.0",
    "cc:compile": "hardhat compile && wagmi generate && ts-node ./contracts/extract-abis.ts",
    "cc:local-deploy": "npx hardhat run contracts/hardhat/scripts/initial-deploy-all.ts --network localhost",
    "cc:local-upgrade": "npx hardhat run contracts/hardhat/scripts/subsequent-deploy-all.ts --network localhost",
    "graph:node": "cd thegraph/local-node && docker-compose up",
    "graph:local-create": "graph create --node http://0.0.0.0:8020/ localhost-subgraph ",
    "graph:local-remove": "graph remove --node http://0.0.0.0:8020/ localhost-subgraph",
    "graph:local-deploy": "graph deploy --node http://0.0.0.0:8020/ --ipfs http://0.0.0.0:5001 localhost-subgraph ./thegraph/localhost-subgraph.yaml"
  },
  "dependencies": {
    "@radix-ui/react-alert-dialog": "^1.0.4",
    "@radix-ui/react-dialog": "^1.0.4",
    "@radix-ui/react-radio-group": "^1.1.3",
    "@radix-ui/react-select": "^1.2.2",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-switch": "^1.0.3",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-tooltip": "^1.0.6",
    "@rainbow-me/rainbowkit": "^1.0.6",
    "@t3-oss/env-nextjs": "^0.6.0",
    "@tanstack/react-table": "^8.9.3",
    "@wagmi/core": "^1.3.7",
    "chart.js": "^4.3.0",
    "chartjs-adapter-luxon": "^1.3.1",
    "clsx": "^1.2.1",
    "d3-format": "^3.1.0",
    "gsap": "^3.12.2",
    "lodash.merge": "^4.6.2",
    "lokijs": "^1.5.12",
    "luxon": "^3.3.0",
    "next": "13.4.9",
    "react": "18.2.0",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18.2.0",
    "remixicon": "^3.4.0",
    "sharp": "^0.32.3",
    "viem": "^1.2.15",
    "wagmi": "^1.3.8",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@graphprotocol/client-cli": "^3.0.0",
    "@graphprotocol/graph-ts": "^0.31.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.8",
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@openzeppelin/contracts": "^4.9.2",
    "@openzeppelin/contracts-upgradeable": "^4.9.2",
    "@openzeppelin/hardhat-upgrades": "2.0.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/d3-format": "^3.0.1",
    "@types/lodash.merge": "^4.6.7",
    "@types/node": "20.4.5",
    "@types/react": "18.2.15",
    "@types/react-dom": "18.2.7",
    "@wagmi/cli": "^1.3.0",
    "autoprefixer": "10.4.14",
    "conventional-changelog-conventionalcommits": "^6.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "8.44.0",
    "eslint-config-next": "13.4.9",
    "ethers": "^6.6.3",
    "hardhat": "^2.17.0",
    "pino-pretty": "^10.0.1",
    "postcss": "8.4.26",
